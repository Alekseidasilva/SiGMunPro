@model IEnumerable<Web.Models.Entidades.Perfis.Role>

@{
    ViewBag.Title = "Perfis de Usuário";
}


<body class="sidebar-menu-collapsed">
<div class="se-pre-con"></div>
<section>
    <!-- main content start -->
<div class="main-content">
    <!-- content -->
    <div class="container-fluid content-top-gap">      
<!-- people -->
        <section class="people">           
            <!-- //people cards style 2 -->
            <div class="card card_border mb-5">
                <div class="cards__heading">
                     <h3>Perfis de Utilizadores <span></span></h3>                  
                   @*<a href="@Url.Action("Cadastrar")" class="btn btn-outline-success"><i class="fa fa-plus"></i> Cadastrar</a>*@                   
                </div>
                <div class="card-body">
                    <div class="row px-2">
                        @foreach (var item in Model)
                        {

                        <div class="col-lg-3 col-md-6 mb-4 px-2">
                            <div class="card text-center card_border py-2">
                                <div class="card-body">
                                    <div class="team-main-19">
                                        <a href="@Url.Action("Detalhes/"+item.Id)"><img class="rounded-circle" src="~/Content/images/New/UserProfile.png" width="100px" alt=" "></a>
                                        <div class="right-team-9">
                                            <div>
                                                <h5><a href="@Url.Action("Detalhes/"+item.Id)" class="card__title mb-2 mt-3">@item.Name</a></h5>                                                                                             
                                                <p class="">@item.DataCadastro.ToShortDateString()</p>
                                               @if (item.Estado)
                                                 {
                                                  <span  style="font-size: x-large; color: green";>
                                                         <i class="fa fa-thumbs-o-up"></i>
                                                   </span>
                                                   
                                                 
                                                 }else
                                                 {
                                                  <span  style="font-size: x-large; color: red";>
                                                         <i class="fa fa-thumbs-o-down"></i>
                                                   </span>
                                                 }
                                            </div>
                                            <div class="people-social mt-3"> 
                                                 @Html.ActionLink("'","Detalhes", new{ id=item.Id}, htmlAttributes:new{@class="bg-info fa fa-info" })                                              
                                            </div>                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                   
                    
                       }
                    </div>
                </div>
            </div>
            <!-- //people cards style 2 -->
        </section>
        <!-- //people -->  
    </div>
    <!-- //content -->
</div>
<!-- main content end-->
</section>
</body>
