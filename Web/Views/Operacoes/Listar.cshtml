                     string nomeDoTipoDocumento = repTiposDeDocumentos.BuscarNomePeloId(item.OperacaoTipoDocumentoId);
                     RepUsuario user=new RepUsuario();
                     string nomeCadastrador = user.BuscarNomeDoCadastrador(item.Idcadastrador);
                     <tr>
                        <td class="text-center" width="90px">@item.Id</td>
                        <td class="text-center" width="150px">@item.OperacaoMunicipeNM</td>
                        @*<td>@nomeMunicipe</td>*@
                        <td width="250px">@nomeDoTipoDocumento</td>
                        <td width="250px">@nomeFinalidade</td>
                        <td class="text-center">@nomeFormaPagamento</td>
