                        <td class="text-center">@nomeCadastrador</td>
                        <td>
                            <a href="@Url.Action("#")" class="btn btn-success btn-sm fa fa-print"></a>
                         </td>
                    </tr>
                    }
                   
                </tbody>
            </table>
        </div>
    









