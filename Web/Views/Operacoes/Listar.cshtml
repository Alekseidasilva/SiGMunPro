                <div class="">
                    <a href="@Url.Action("ExecutarNova")" class="btn btn-outline-secondary btn-xs ml-2"><i class="fa fa-plus"></i> Nova Operação</a> 
                    <button class="btn btn-outline-secondary btn-xs   btn-filter"><span class="fa fa-filter"></span> Filtrar</button>
                </div>
            </div>
            <wbr />
            <table class="table table-hover table-sm table-responsive-lg">
                <thead class="bg-primary" >
                    <tr class="filters">
                        <th><input type="text" class="form-control text-center" placeholder="#" disabled></th>
                        <th><input type="text" class="form-control text-center" placeholder="NM" disabled></th>
                        @*<th><input type="text" class="form-control" placeholder="Nome Completo" disabled></th>*@
                        <th><input type="text" class="form-control text-center" placeholder="Documento" disabled></th>
                        <th><input type="text" class="form-control text-center" placeholder="Finalidade" disabled></th>
                        <th><input type="text" class="form-control text-center" placeholder="Form. Pag" disabled></th>
                        <th><input type="text" class="form-control text-center" placeholder="Valor(Kzs)" disabled></th>
