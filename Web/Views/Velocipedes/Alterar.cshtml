                type: "post",
                url: "/Velocipedes/BuscarModelosPelaMarca?id=" + marcaId,
                contentType: "html",
                success: function(response) {
                    debugger;
                    $("#VelocipeModelo").empty();
                    $("#VelocipeModelo").append(response);
                }
            });
        });
    } )
</script>
